<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Artist</th>
      <th>Album image</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.name %></td>
        <td><%= album.artist.name %></td>
        <td><img class="thumbnail" width="70%" src="<%= album.album_url %>"</td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

